<Window x:Class="RM01InternetConnector.Win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RM01InternetConnector.Win"
        mc:Ignorable="d"
        Title="RM-01 Internet Connector"
        Width="315" Height="440"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB"
        Icon="Assets/icon.png">
    <Window.Resources>
        <LinearGradientBrush x:Key="ConnectBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2DD45B" Offset="0"/>
            <GradientStop Color="#20A844" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DisconnectBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F27373" Offset="0"/>
            <GradientStop Color="#D95959" Offset="1"/>
        </LinearGradientBrush>
        <local:BooleanToBrushConverter x:Key="boolToBrushConverter"
                                       ConnectedBrush="{StaticResource DisconnectBrush}"
                                       DisconnectedBrush="{StaticResource ConnectBrush}"/>
        <local:InvertBoolConverter x:Key="invertBoolConverter"/>
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True"
                                BorderBrush="#50FFFFFF"
                                BorderThickness="1"
                                Opacity="{TemplateBinding Opacity}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="10"/>
                                </Grid.RowDefinitions>
                                <Rectangle Grid.Row="0">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#66FFFFFF" Offset="0"/>
                                            <GradientStop Color="#19FFFFFF" Offset="0.8"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <ContentPresenter Grid.Row="1"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                                <Rectangle Grid.Row="2">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00FFFFFF" Offset="0"/>
                                            <GradientStop Color="#33FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="16,16,16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Language button on left -->
            <Button Grid.Column="0"
                    HorizontalAlignment="Left"
                    Command="{Binding ToggleLanguageCommand}"
                    Content="{Binding LanguageLabel}"
                    Padding="8,4"
                    FontWeight="Bold"
                    BorderBrush="#33000000"
                    BorderThickness="1"
                    Background="#191BBA3F"
                    Foreground="#1B1B1B"
                    Cursor="Hand"/>
            <!-- Centered title -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="Assets/icon.png" Width="22" Height="22" Margin="0,0,8,0"/>
                <TextBlock VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Text="{Binding WindowTitle}"/>
            </StackPanel>
        </Grid>

        <Rectangle Grid.Row="1" Height="1" Fill="#11000000" Margin="12,0"/>

        <!-- Status -->
        <StackPanel Grid.Row="2" Margin="0,10" HorizontalAlignment="Center">
            <TextBlock FontSize="20" FontWeight="Medium" Text="{Binding StatusText}"/>
            <TextBlock FontSize="12" Foreground="#666" Text="{Binding InterfaceText}" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Device visual -->
        <Grid Grid.Row="3" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" ClipToBounds="True">
                <Image x:Name="DeviceImage"
                       Source="Assets/body.png"
                       Stretch="Uniform"
                       Width="100"
                       Height="178"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Image.RenderTransform>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect x:Name="GlowEffect" Color="#E04444" BlurRadius="18" ShadowDepth="0" Opacity="0.0"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#22CC44" BlurRadius="18" ShadowDepth="0" Opacity="0.0"/>
                                        </Setter.Value>
                                    </Setter>
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard BeginTime="0:0:1.4">
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity"
                                                                 From="0.0" To="0.4"
                                                                 Duration="0:0:1"
                                                                 AutoReverse="True"
                                                                 RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#E04444" BlurRadius="18" ShadowDepth="0" Opacity="0.0"/>
                                        </Setter.Value>
                                    </Setter>
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity"
                                                                 From="0.0" To="0.4"
                                                                 Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <Rectangle x:Name="Sweep"
                           Width="80"
                           Height="534"
                           RenderTransformOrigin="0.5,0.5"
                           Visibility="Collapsed">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00FFFFFF" Offset="0"/>
                            <GradientStop Color="#80FFFFFF" Offset="0.3"/>
                            <GradientStop Color="#F2FFFFFF" Offset="0.5"/>
                            <GradientStop Color="#80FFFFFF" Offset="0.7"/>
                            <GradientStop Color="#00FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <BlurEffect Radius="15"/>
                    </Rectangle.Effect>
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="25"/>
                            <TranslateTransform x:Name="SweepTranslate" X="-120"/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                    <Rectangle.OpacityMask>
                        <ImageBrush ImageSource="Assets/body.png" Stretch="Uniform"/>
                    </Rectangle.OpacityMask>
                    <Rectangle.Style>
                        <Style TargetType="Rectangle">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TransformGroup.Children)[1].X"
                                                                 From="-120" To="120" Duration="0:0:1.4">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuadraticEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:1.4" Value="{x:Static Visibility.Collapsed}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
            </Grid>
        </Grid>

        <!-- Connect button -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Button Style="{StaticResource GlassButton}"
                    Background="{Binding IsConnected, Converter={StaticResource boolToBrushConverter}, ConverterParameter='connect'}"
                    Command="{Binding ConnectCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource invertBoolConverter}}"
                    Width="180"
                    Height="52"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding ButtonText}" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Footer -->
        <TextBlock Grid.Row="5"
                   Margin="0,20,0,12"
                   HorizontalAlignment="Center"
                   Foreground="#88000000"
                   FontSize="10"
                   Text="Copyright Â© 2025 massif-01, RMinte AI Technology Co., Ltd."/>
    </Grid>
</Window>





